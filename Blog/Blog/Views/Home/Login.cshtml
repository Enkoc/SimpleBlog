
@{
    Layout = null;
}

@model Blog.ViewModels.UserViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div> 
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <table>
        <tr>
            <td>@Html.LabelFor(model => model.User.Login)</td>
            <td>@Html.TextBoxFor(model => model.User.Login)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.User.Password)</td>
            <td>@Html.PasswordFor(model => model.User.Password)</td>
        </tr>
        <tr>
            <td><input type="submit" , value="Login" /></td>
        </tr>
    </table>
}
    </div>
</body>
</html>
